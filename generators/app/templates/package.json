{
  "name": "{{packageName}}",
  "version": "0.0.1",
  "author": "{{author}}",
  "license": "{{license}}",

  "type": "module",
  "main": "dist/cjs/index.js",
  "module": "dist/mjs/index.js",
  "types": "dist/cjs/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/mjs/index.js",
      "require": "./dist/cjs/index.js"
    }
  },

  "repository": {
    "type": "git",
    "url": "{{repositoryUrl}}"
  },
  "bugs": {
    "url": "{{bugsUrl}}"
  },
  "homepage": "{{homepage}}",

  "scripts": {
    "test": "vitest run",
    "lint": "bun run lint:tsc && eslint src",
    "lint:tsc": "tsc --project tsconfig.test.json --noEmit && tsc --project tsconfig.lib.esm.json --noEmit",
    "build": "rimraf ./dist && bun run build:esm && bun run build:cjs",
    "build:esm": "tsc --project tsconfig.lib.esm.json",
    "build:cjs": "tsc --project tsconfig.lib.cjs.json",
    "prepare": "husky"
  },

  "devDependencies": {
    "@commitlint/cli": "19.2.1",
    "@commitlint/config-conventional": "19.1.0",
    "@stylistic/eslint-plugin": "1.7.0",
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "7.4.0",
    "@typescript-eslint/parser": "7.4.0",
    "commitizen": "4.3.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.57.0",
    "husky": "9.0.11",
    "rimraf": "5.0.5",
    "typescript": "5.4.3",
    "vitest": "1.4.0"
  },

  "files": [
    "dist/cjs",
    "dist/mjs"   
  ]
}
