    "rootDir": "src",
    "module": "ESNext",
    "target": "ESNext",
    "outDir": "dist/mjs",
    "moduleResolution": "node",
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/__mocks__/**/*", "src/**/__tests__/**/*"]
}